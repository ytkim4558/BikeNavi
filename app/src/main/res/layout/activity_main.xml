<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nagnek.bikenavi.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_point_search_frame_layout"
        android:layout_alignBottom="@+id/start_point_search_frame_layout"
        android:layout_alignParentStart="true"
        android:text="출발 장소" />

    <FrameLayout
        android:id="@+id/start_point_search_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView">

        <!--flagNoExtractUtil : 입력창이 전체화면으로 가려지는것을 막음-->
        <!--actionSearch : 키보드의 엔터가 검색으로 글자가 바뀜-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance"
            >

        <com.nagnek.bikenavi.DelayAutoCompleteTextView
            android:id="@+id/start_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="출발 장소를 입력하세요"
            android:imeOptions="flagNoExtractUi|actionSearch"
            android:inputType="textCapSentences"/>
        </android.support.design.widget.TextInputLayout>
        <ProgressBar
            android:id="@+id/pb_loading_indicator1"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />
    </FrameLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dest_point_search_frame_layout"
        android:layout_alignBottom="@+id/dest_point_search_frame_layout"
        android:layout_alignParentStart="true"
        android:text="도착 장소" />

    <FrameLayout
        android:id="@+id/dest_point_search_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_point_search_frame_layout"
        android:layout_toRightOf="@+id/textView2">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_id2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@android:style/TextAppearance"
            >
        <com.nagnek.bikenavi.DelayAutoCompleteTextView
            android:id="@+id/dest_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="도착 장소를 입력하세요"
            android:imeOptions="flagNoExtractUi|actionSearch"
            android:inputType="textCapSentences" />
        </android.support.design.widget.TextInputLayout>
        <ProgressBar
            android:id="@+id/pb_loading_indicator2"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:visibility="gone"

            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dest_point_search_frame_layout">


        <RelativeLayout
            android:id="@+id/mapViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="16dp">


        </RelativeLayout>

        <Button
            android:id="@+id/findRouteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:text="경로찾기" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/findRouteButton"
            android:layout_gravity="right"
            android:singleLine="true"
            android:text="구글맵을 띄워보장" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_container"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가이드"
            android:id="@+id/guide_button"
            android:visibility="gone"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>


</RelativeLayout>
